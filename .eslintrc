{
  "extends": "@kalanyei/eslint-config",
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "react/jsx-filename-extension": "off",
    "react/destructuring-assignment": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "test/**",
          "tests/**",
          "spec/**",
          "**/__tests__/**",
          "test.js",
          "test-*.js",
          "**/*.test.js",
          "**/*.spec.js",
          "**/webpack.config.js",
          "**/webpack.*.js",
          "**/rollup.config.js",
          "**/gulpfile.js",
          "**/gulpfile.*.js",
          "**/Gruntfile",
          "**/*.dev.js",
          "**/stories.js",
          "app/utils/helpers/**/*.js"
        ],
        "optionalDependencies": false
      }
    ]
  }
}